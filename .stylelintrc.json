{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "color-named": "never",
    "color-function-notation": "legacy",
    "selector-max-type": 0,
    "selector-class-pattern": [
      "^([_a-z][a-z0-9]*)(_[a-z0-9]+)*$",
      {
        "message": "Expected class selector to be snake_case"
      }
    ]
  }
}
