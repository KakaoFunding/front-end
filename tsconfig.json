{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext", "es5", "es6", "es7"],
    "allowJs": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "module": "ESNext",

    /* Path config */
    "baseUrl": ".",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "mocks/*": ["src/mocks/*"],
      "pages/*": ["src/pages/*"],
      "services/*": ["src/services/*"],
      "store/*": ["src/store/*"],
      "stories/*": ["src/stories/*"],
      "styles/*": ["src/styles/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
